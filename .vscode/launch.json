{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "processId": "${command:PickProcess}",
            "restart": true,
            "protocol": "inspector",
            "port": 9229,
            "sourceMaps": true,
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Remote",
            "restart": false,
            "protocol": "inspector",
            "port": 9229,
            "address": "localhost",
            "sourceMaps": true,
            "localRoot": "${workspaceRoot}",
            "remoteRoot": "/home/nodejs/app/src/",
        },
    ]
}